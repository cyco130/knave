{
  "name": "knave-react",
  "version": "2.0.0-next.0",
  "description": "Complete client-side navigation solution for React",
  "repository": "https://github.com/cyco130/knave",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsup src/index.tsx --dts-resolve --format=cjs,esm",
    "dev": "tsup src/index.tsx --dts-resolve --format=esm --watch . --watch ../knave/dist",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:package",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
    "test:package": "publint"
  },
  "keywords": [
    "react",
    "client-side navigation",
    "history api",
    "scroll restoration",
    "navigation blocking",
    "pushState",
    "replaceState"
  ],
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8 | ^17 | ^18"
  },
  "dependencies": {
    "@types/react": "^18.0.21"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^2.1.2",
    "eslint": "^8.29.0",
    "knave": "workspace:*",
    "publint": "^0.1.3",
    "react": "^18.2.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.3"
  }
}
